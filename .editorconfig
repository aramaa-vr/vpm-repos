root = true

# C# ソースコードファイル（.cs）をUTF-8 without BOMで保存
[*.cs]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# テキストファイル（.txt）をUTF-8 without BOMで保存
[*.txt]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

